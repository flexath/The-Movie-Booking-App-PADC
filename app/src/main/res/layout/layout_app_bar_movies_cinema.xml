<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:gravity="center_vertical"
    android:background="@color/colorPrimary">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnBackMoviesCinema"
        android:layout_width="@dimen/width_back_arrow_cinema"
        android:layout_height="@dimen/height_back_arrow_cinema"
        android:layout_gravity="center_vertical"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp"
        android:scaleType="centerCrop"
        android:src="@drawable/back_arrow" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchViewMoviesCinema"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/margin_30dp"
        android:visibility="gone"
        app:iconifiedByDefault="false"
        app:queryBackground="@android:color/transparent"
        app:queryHint="Search the cinema"
        app:searchIcon="@drawable/ic_baseline_search_white_24dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnFilterMoviesCinema"
        android:layout_width="@dimen/width_back_arrow_cinema"
        android:layout_height="@dimen/height_back_arrow_cinema"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/margin_large"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_baseline_filter_alt_white_24dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnSearchMoviesCinema"
        android:layout_width="@dimen/width_back_arrow_cinema"
        android:layout_height="@dimen/height_back_arrow_cinema"
        android:layout_gravity="center_vertical"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="75dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_baseline_search_white_24dp" />

    <LinearLayout
        android:id="@+id/llLocationMoviesCinema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="122dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/width_navigation_icon"
            android:layout_height="@dimen/height_navigation_icon"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/margin_medium"
            app:srcCompat="@drawable/navigation_white" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCityNameExtraHomeCinema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:letterSpacing="-0.02"
            android:text="Yangon"
            android:textColor="@color/white"
            android:textSize="@dimen/text_regular_2x"
            android:textStyle="bold|italic" />

    </LinearLayout>

</RelativeLayout>