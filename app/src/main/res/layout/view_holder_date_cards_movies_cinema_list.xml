<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="20dp"
    android:background="@color/colorPrimary"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="71dp"
        android:paddingTop="@dimen/margin_card_medium"
        android:paddingBottom="@dimen/margin_10dp"
        android:background="@drawable/date_card_background"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/vHoleDateCard"
            android:layout_width="22dp"
            android:layout_height="5dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/date_card_hole_background" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDateMoviesCinema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vHoleDateCard"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/inter_bold"
            android:text="Today"
            android:textColor="@color/black"
            android:textSize="@dimen/text_regular" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvMonthMoviesCinema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDateMoviesCinema"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/inter_bold"
            android:text="May"
            android:textColor="@color/black"
            android:textSize="@dimen/text_regular" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMonthMoviesCinema"
            android:layout_marginTop="5dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDayMoviesCinema"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/inter_bold"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="@dimen/text_regular_2x" />

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="-5dp"
                android:layout_centerVertical="true"
                android:background="@drawable/date_card_hole_background" />

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="-5dp"
                android:layout_centerVertical="true"
                android:background="@drawable/date_card_hole_background" />

        </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>


