<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemCinemaTimes"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_10dp"
    android:layout_marginEnd="@dimen/margin_10dp"
    android:background="@drawable/movies_show_times_background"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_15dp"
    android:paddingTop="@dimen/margin_medium"
    android:paddingEnd="@dimen/margin_15dp"
    android:paddingBottom="@dimen/margin_medium">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="6:30 AM"
        android:textAppearance="@style/TextInterWhiteSemiBold14sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5dp"
        android:gravity="center"
        android:text="3D DBOX"
        android:textAppearance="@style/TextInterWhiteSemiBold14sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5dp"
        android:gravity="center"
        android:text="Screen 2"
        android:textAppearance="@style/TextInterWhiteSemiBold14sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5dp"
        android:gravity="center"
        android:text="21 Available"
        android:textAppearance="@style/TextInterWhiteSemiBold14sp" />

</LinearLayout>